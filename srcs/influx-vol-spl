apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-dock-cert
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "_PATH_/srcs/influx-vol"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-dock-cert
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
